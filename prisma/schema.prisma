// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dish {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  type        DishType
  price       Int
  weight      Int
  ingredients String[]
  likes       Int      @default(0)
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
  images      Image[]
  discount    Int      @default(0)
  bucket      Bucket[]
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String   @unique
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  dish      Dish     @relation(fields: [dishId], references: [id])
  dishId    Int
}

enum DishType {
  BREAKFAST
  DINNER
  DRINK
  DESSERT
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  password    String
  phone       String
  userSalt    String
  createdAt   DateTime      @default(now())
  updateAt    DateTime      @updatedAt
  type        UserType
  bucket      Bucket[]
  Reservation Reservation[]
}

enum UserType {
  ADMIN
  BUYER
  MODERATOR
}

model Bucket {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int
  dish   Dish @relation(fields: [dishId], references: [id])
  dishId Int
  count  Int
  price  Int
}

model Table {
  id            Int           @id @default(autoincrement())
  countOfQuests Int
  Reservation   Reservation[]
}

model Reservation {
  id        Int    @id @default(autoincrement())
  table     Table  @relation(fields: [tableId], references: [id])
  tableId   Int
  bookHours Int
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
  date      String
}
