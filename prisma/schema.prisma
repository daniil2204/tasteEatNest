generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dish {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  type        DishType
  price       Int
  weight      Int
  ingredients String[]
  likes       Int      @default(0)
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
  images      Image[]
}

model Image {
  id         Int      @id @default(autoincrement())
  url        String   @unique
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt
  dish       Dish     @relation(fields: [dishId], references: [id])
  dishId     Int
}

enum DishType {
  BREAKFAST
  DINNER
}
